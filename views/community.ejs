    <div class="custom_container">
        <form action="/community" method="post" class="contact_form row" id="c_form">
            <div class="section_title col-12"><%=staticData.community_join%></div>
            <div class="field_block col-12 col-sm-6">
                <input type="text" autocomplete="off" placeholder="<%=staticData.community_surname%>" name="surname" data-validation="required"/>
                <span class="error_hint"><%=staticData.community_mandatory_surname%></span>
            </div>
            <div class="field_block col-12 col-sm-6">
                <input type="text" autocomplete="off" placeholder="<%=staticData.community_name%>" name="name" id="name" data-validation="required"/>
                <span class="error_hint"><%=staticData.community_mandatory_name%></span>
            </div>
            <div class="field_block col-12 col-sm-6">
                <input type="text" autocomplete="off" placeholder="<%=staticData.community_address%>" name="address" id="address" data-validation="required"/>
                <span class="error_hint"><%=staticData.community_mandatory_address%></span>
            </div>
            <div class="field_block col-12">
                <input type="text" autocomplete="off" placeholder="<%=staticData.community_email%>" id="email" name="email" data-validation="required"/>
<!--                <span class="error_hint"><%=staticData.community_mandatory_email%></span>-->
<!--                <span class="error_hint"><h5 id="result"></h5><%=staticData.community_mandatory_email%></span>-->
                <span class="error_hint">
							<span class="standard_hint"><%=staticData.community_mandatory_email%></span>
							<span class="individual_hint"><%=staticData.community_valid_email%></span>
						</span>
            </div>

            <div class="field_block col-12">
                <input type="text" id="phone" name="phone" autocomplete="off" placeholder="<%=staticData.community_phone%>" oninput="this.value=this.value.replace(/[^0-9+]/g,'');" data-validation="required"/>
                <span class="error_hint"><%=staticData.community_mandatory_phone%></span>
            </div>
            <div class="field_block col-12">
                <select name="subject" data-validation="required"  title="Cooking level" class="selectpicker">
                    <option value="Beginner"><%=staticData.community_subject1%></option>
                    <option value="Experienced"><%=staticData.community_subject2%></option>
                    <option value="Certified cook"><%=staticData.community_subject3%></option>
                </select>
                <span class="error_hint"><%=staticData.community_mandatory_subject%></span>
            </div>
            <div class="section_title col-12"><%=staticData.community_busines%></div>
            <div class="field_block col-12">
                <input type="text" placeholder="Facebook" name="facebook"/>
            </div>
            <div class="field_block col-12">
                <input type="text" placeholder="Instagram" name="instagram"/>
            </div>
            <div class="field_block col-12">
                <input type="text" placeholder="Youtube" name="youtube"/>
            </div>
            <div class="section_title col-12"><%=staticData.community_referral%> </div>
            <div class="field_block col-12">
                <input type="text" placeholder="Referral code" name="referral"/>
            </div>
            <div class="button_block col-12">
                <button type="submit"  class="validate_button" id="sendCommunity">SEND</button>
            </div>
            <div class="about_contacts col-12">
                <div class="block_title"><%=staticData.community_whole%></div>
                <div class="block_description"><%=staticData.community_make%></div>
                <div class="notif_block"><%=staticData.community_have%></div>
            </div>
        </form>

