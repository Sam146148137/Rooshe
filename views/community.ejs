        <script>

            $(document).on( "click","#sendCommunity", function() {
                let formData = $('#c_form').serializeArray();
                $.ajax({
                    type: "POST",
                    url: '/community',
                    data: formData,
                    success: function(result){
                        alert('You have successfully registered')
                        // $("#sus").toggleClass('invisible visible');
                        location.redirect('/');
                    },
                    error: function(result){
                        $("html, body").animate({
                            scrollTop: ($(document).height()-2000)
                        }, 1000);
                    }
                });
            });

        </script>
