<%- include('layout/head.ejs') %>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped text-center my-3">
                        <thead>
                        <tr class="table-dark">
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Url</th>
                            <th>Description</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% item.forEach (function (item, index ) { %>
                        <tr class="align-middle">
                            <td><%= index + 1 %></td>
                            <td><img src = "/<%= item.image %>" width="50" height="50"></td>
                            <td><%= item.title %></td>
                            <td><a class="link" href="<%= item.url %>"><%= item.url %></a></td>
                            <td><%- item.desc %></td>
                            <td><a href="/admin/edit/<%= item._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i> </a> </td>
                            <td><a href="/admin/delete/<%= item._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i> </a> </td>
                        </tr>
                            <%})%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

<%- include('layout/foot.ejs') %>




